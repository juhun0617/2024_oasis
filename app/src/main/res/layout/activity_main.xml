<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#FFFFFF">
    
    <TextView
        android:id="@+id/login_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="농사직설"
        android:fontFamily="@font/gowunbatang_bold"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="120dp"
        android:textColor="@color/black"/>
    
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toBottomOf="@id/login_title"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="50dp"
        android:id="@+id/login_id_edittext"
        android:hint="아이디를 입력하세요"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        android:textColorHint="#6B6B6B"
        />


    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/custom_edittext"
        app:layout_constraintTop_toBottomOf="@id/login_id_edittext"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="10dp"
        android:id="@+id/login_pw_edittext"
        android:hint="비밀번호를 입력하세요"
        android:paddingLeft="20dp"
        android:textSize="15dp"
        android:textColorHint="#6B6B6B"
        android:inputType="textPassword"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_pw_edittext"
        android:text="비밀번호 찾기"
        app:layout_constraintEnd_toEndOf="@id/login_pw_edittext"
        android:layout_marginTop="5dp"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/login_loginButton"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/radius"
        app:layout_constraintTop_toBottomOf="@id/login_pw_edittext"
        android:layout_marginTop="50dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="로그인"
        android:textColor="@color/white"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/login_loginButton"
        android:text="  회원가입   |   아이디 찾기"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="30dp"
        android:textStyle="bold"
        android:textColor="@color/black"/>

    <View
        android:layout_width="300dp"
        android:layout_height="1dp"
        app:layout_constraintTop_toBottomOf="@id/login_loginButton"
        android:background="#B0B0B0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="80dp"/>

    <ImageView
        android:layout_width="250dp"
        android:layout_height="100dp"
        android:src="@drawable/icon"
        app:layout_constraintTop_toBottomOf="@id/login_loginButton"
        android:layout_marginTop="100dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>






    

  

</androidx.constraintlayout.widget.ConstraintLayout>