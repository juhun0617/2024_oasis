<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ChatDetail"
    android:background="#FAFAFA"
    android:focusable="true"
    android:focusableInTouchMode="true">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintTop_toTopOf="parent"
        android:src="@drawable/chat_prof"
        android:layout_marginTop="-10dp"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="500dp"
        android:id="@+id/inter"
        app:layout_constraintTop_toTopOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/invisible_chat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="20dp"
        android:visibility="invisible"
        >
        <ImageView
            android:layout_width="50dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_community_searchbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:backgroundTint="#7C3DF9"
            android:id="@+id/chat6"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/chat6"
            app:layout_constraintEnd_toEndOf="@id/chat6"
            app:layout_constraintStart_toStartOf="@id/chat6"
            app:layout_constraintBottom_toBottomOf="@id/chat6"
            android:text="콜!!"
            android:fontFamily="@font/gmarketsans"
            android:textColor="#FFFFFF"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="방금"
            android:textColor="#8F8F8F"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/gmarketsans"
            android:textSize="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>





    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        app:layout_constraintBottom_toBottomOf="parent"
        android:background="@drawable/rounded_top_white"
        android:id="@+id/chat_edit">
        <EditText
            android:layout_width="300dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_searchbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:hint="메시지를 작성하세요."
            android:fontFamily="@font/gmarketsans"
            android:textSize="15dp"
            android:paddingStart="10dp"
            android:drawableEnd="@drawable/smile_icon"
            android:paddingEnd="15dp"
            android:drawableTint="#A2A1A3"
            android:id="@+id/chat_edittext"
            android:singleLine="true"
            android:maxLines="1"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="80dp"
        android:layout_marginStart="20dp"
        >
        <ImageView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_community_searchbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/chat1"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/chat1"
            app:layout_constraintEnd_toEndOf="@id/chat1"
            app:layout_constraintStart_toStartOf="@id/chat1"
            app:layout_constraintBottom_toBottomOf="@id/chat1"
            android:text="감자형님 올해 첫 감자 수확 했다더라"
            android:fontFamily="@font/gmarketsans"
            android:textColor="#4C4C4C"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="오전 11:32"
            android:textColor="#8F8F8F"
            android:layout_marginTop="45dp"
            android:fontFamily="@font/gmarketsans"
            android:textSize="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="150dp"
        android:layout_marginEnd="20dp"
        >
        <ImageView
            android:layout_width="280dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_community_searchbar"
            android:backgroundTint="#7C3DF9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/chat2"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/chat2"
            app:layout_constraintEnd_toEndOf="@id/chat2"
            app:layout_constraintStart_toStartOf="@id/chat2"
            app:layout_constraintBottom_toBottomOf="@id/chat2"
            android:text="오늘 우리 집에 바구니 한가득 들고 오셨어~"
            android:fontFamily="@font/gmarketsans"
            android:textColor="#FFFFFF"
            android:textSize="14dp"/>

        <ImageView
            android:layout_width="230dp"
            android:layout_height="35dp"
            android:background="@drawable/custom_community_searchbar"
            android:backgroundTint="#7C3DF9"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginTop="45dp"
            android:id="@+id/chat3"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/chat3"
            app:layout_constraintEnd_toEndOf="@id/chat3"
            app:layout_constraintStart_toStartOf="@id/chat3"
            app:layout_constraintBottom_toBottomOf="@id/chat3"
            android:text="곧 너네집에도 갈듯 ㅋㅋㅋㅋㅋㅋ"
            android:fontFamily="@font/gmarketsans"
            android:textColor="#FFFFFF"
            android:textSize="14dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="오전 11:40"
            android:textColor="#8F8F8F"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/gmarketsans"
            android:textSize="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginTop="260dp"
        android:layout_marginStart="20dp"
        >
        <ImageView
            android:layout_width="250dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_community_searchbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:id="@+id/chat4"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/chat4"
            app:layout_constraintEnd_toEndOf="@id/chat4"
            app:layout_constraintStart_toStartOf="@id/chat4"
            app:layout_constraintBottom_toBottomOf="@id/chat4"
            android:text="방금 형님 우리집에도 오셨다 가셨다~~"
            android:fontFamily="@font/gmarketsans"
            android:textColor="#4C4C4C"
            android:textSize="14dp"/>

        <ImageView
            android:layout_width="300dp"
            android:layout_height="40dp"
            android:background="@drawable/custom_community_searchbar"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="45dp"
            android:id="@+id/chat5"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="@id/chat5"
            app:layout_constraintEnd_toEndOf="@id/chat5"
            app:layout_constraintStart_toStartOf="@id/chat5"
            app:layout_constraintBottom_toBottomOf="@id/chat5"
            android:text="저녁에 같이 감자형님이랑 감자전에 막걸리 먹자."
            android:fontFamily="@font/gmarketsans"
            android:textColor="#4C4C4C"
            android:textSize="14dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:text="오전 17:10"
            android:textColor="#8F8F8F"
            android:layout_marginTop="90dp"
            android:fontFamily="@font/gmarketsans"
            android:textSize="12dp"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


</androidx.constraintlayout.widget.ConstraintLayout>